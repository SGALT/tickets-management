<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Tickets", tickets_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown d-flex align-items-center justify-content-center">
          <div class="ml-4" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-labelledby="navbarDropdown" style="font-size: 26px;">
            <i class="fas fa-user dropdown-toggle"></i>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% elsif student_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Tickets", tickets_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Nouveau Ticket", new_ticket_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <div class="ml-4" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-labelledby="navbarDropdown" style="font-size: 26px;">
            <i class="fas fa-user dropdown-toggle"></i>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Déconnexion", destroy_student_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Professeur Log-in", new_user_session_path, class: "text-white nav-link btn btn-secondary mr-2" %>
        </li>
        <li class="nav-item">
          <%= link_to "Étudiant Log-in", new_student_session_path, class: "text-white nav-link btn btn-primary" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
